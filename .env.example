# Runtime
NODE_ENV=development
PG_DSN=postgresql://jani:jani@localhost:5432/jani
REDIS_URL=redis://localhost:6379

# OpenRouter (LLM)
OPENROUTER_API_KEY=your-openrouter-key
OPENROUTER_MODEL=openrouter/auto
OPENROUTER_ZDR=true

# Telegram
TELEGRAM_BOT_TOKEN=000000:example
TELEGRAM_WEBHOOK_SECRET=change-me
TELEGRAM_WEBHOOK_URL=https://<your-ngrok-domain>/bot/webhook

# App modes
APP_MODE=telegram # telegram|miniappprod|pwa-dev
PAYMENTS_MODE=stars # stars|mock

# Limits
QUOTA_DAILY_LIMIT=50
SUBSCRIPTION_UNLIMITED_SOFTCAP=2000

# Stars pricing (XTR)
XTR_PRICE_SUBSCRIPTION_PLUS=399
XTR_PRICE_SUBSCRIPTION_PRO=899
XTR_PRICE_SUBSCRIPTION_ULTRA=1599
XTR_PRICE_STORY=450
XTR_PRICE_MEMORY=120
XTR_PRICE_CREATOR=300
