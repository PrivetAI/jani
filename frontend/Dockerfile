FROM node:20-alpine AS builder
WORKDIR /app
ARG VITE_PROXY_TARGET
ARG VITE_DEV_SERVER_PORT
ARG VITE_API_BASE_URL
ARG VITE_TELEGRAM_BOT_USERNAME
ARG VITE_MOCK_TELEGRAM_INIT_DATA
ENV VITE_PROXY_TARGET=$VITE_PROXY_TARGET
ENV VITE_DEV_SERVER_PORT=$VITE_DEV_SERVER_PORT
ENV VITE_API_BASE_URL=$VITE_API_BASE_URL
ENV VITE_TELEGRAM_BOT_USERNAME=$VITE_TELEGRAM_BOT_USERNAME
ENV VITE_MOCK_TELEGRAM_INIT_DATA=$VITE_MOCK_TELEGRAM_INIT_DATA
COPY package*.json ./
RUN npm install
COPY . .
RUN npm run build

FROM node:20-alpine
WORKDIR /app
ENV NODE_ENV=production
COPY --from=builder /app/package*.json ./
COPY --from=builder /app/node_modules ./node_modules
COPY --from=builder /app/dist ./dist
EXPOSE 4173
CMD ["npm", "run", "preview", "--", "--host", "0.0.0.0", "--port", "4173"]
